# brew
if hash brew 2>/dev/null; then
    alias bc="brew cleanup"
    alias bd="brew doctor"
    alias bi="brew install"
    alias bl="brew list"
    alias bp="brew prune"
    alias bu="brew upgrade"
fi

# config files
alias alice="vim ~/dotfiles/misc/alias"
alias bashrc="vim ~/dotfiles/bash/.bashrc"
alias i3rc="vim ~/dotfiles/i3/.config/config"
alias nvimrc="nvim ~/.config/nvim/init.vim"
alias sshrc="vim ~/.ssh/config"
alias termiterc="vim ~/dotfiles/termite/.config/termite/config"
alias tmuxrc="vim ~/dotfiles/tmux/.tmux.conf"
alias xinitrc="vim ~/dotfiles/xinitrc"
alias vimrc="vim ~/dotfiles/vim/.vimrc"
alias zshrc="vim ~/dotfiles/zsh/.zshrc"

# source
alias salice="source ~/dotfiles/misc/alias"
alias sbashrc="source ~/dotfiles/bash/.bashrc"
alias stmux="tmux source-file ~/dotfiles/tmux/.tmux.conf"
alias szsh="source ~/dotfiles/zsh/.zshrc"

# git
alias ga="git add"
alias gagc="git add .; git commit"
alias gc="git commit"
alias gd="git diff"
alias gh="git push"
alias gs="git status"
alias gu="git pull"

# latex report
alias larep="cd $ladir; vim ./sections/*.tex main.tex ./refs/*.bib"
alias crep="latexmk -pvc -dvi- -pdf -outdir=$LADIR/outfiles"

# vim
alias mvim="mvim -v"
alias v="vim"
alias vi="vim"

# python
alias py2="python"
alias py3="python3"

# tmux
alias t="tmux -2"

# ls
alias ll="ls -1"
alias lla="ll -a"

# date
alias week="date +%V"

# moving, copying
alias del="rmtrash"
alias emptytrash="rm -r ~/.Trash/*"
