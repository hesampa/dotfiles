# brew
if hash brew 2>/dev/null; then
    alias bc="brew cleanup"
    alias bd="brew doctor"
    alias bi="brew install"
    alias bl="brew list"
    alias bp="brew prune"
    alias bu="brew upgrade"
fi

# config files
alias alice="vim ~/dotfiles/alias"
alias salice="source ~/dotfiles/alias"
alias bashrc="vim ~/dotfiles/bashrc"
alias sshrc="vim ~/.ssh/config"
alias tmuxrc="vim ~/dotfiles/tmux.conf"
alias vimrc="vim ~/dotfiles/vimrc"
alias nvimrc="nvim ~/.config/nvim/init.vim"
alias zshrc="vim ~/dotfiles/zshrc"
alias i3rc="vim ~/dotfiles/config/config.i3"
alias termiterc="vim ~/dotfiles/config/config.termite"

alias stmux="tmux source-file ~/dotfiles/tmux.conf"
alias szsh="source ~/dotfiles/zshrc"

# git
alias ga="git add"
alias gagc="git add .; git commit"
alias gc="git commit"
alias gd="git diff"
alias gh="git push"
alias gs="git status"
alias gu="git pull"

# latex report
alias larep="cd $ladir; vim ./sections/*.tex main.tex ./refs/*.bib"
alias crep="latexmk -pvc -dvi- -pdf -outdir=$LADIR/outfiles"

# vim
alias mvim="mvim -v"
alias v="vim"
alias vi="vim"

# python
alias py2="python"
alias py3="python3"

# tmux
alias t="tmux -2"

# ls
alias ll="ls -1"
alias lla="ll -a"
alias ls="ls --color=auto"

# date
alias week="date +%V"

# moving, copying
alias del="rmtrash"
alias emptytrash="rm -r ~/.Trash/*"
